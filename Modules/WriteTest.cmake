
macro(write_target_test OUTPUT_FILENAME TEST_NAME TEST_TARGET TEST_ROOT TEST_EXPECTED_RESULTS TEST_ABS_TOLERANCE TEST_REL_TOLERANCE)
    set(TEST_CMD \$<TARGET_FILE:${TEST_TARGET}>)
    _write_test_to_file(${OUTPUT_FILENAME} ${TEST_NAME} ${TEST_CMD} ${TEST_ROOT} ${TEST_EXPECTED_RESULTS} ${TEST_ABS_TOLERANCE} ${TEST_REL_TOLERANCE} ${ARGN})
endmacro()

macro(write_python_test OUTPUT_FILENAME TEST_NAME TEST_TARGET TEST_ROOT TEST_EXPECTED_RESULTS TEST_ABS_TOLERANCE TEST_REL_TOLERANCE)
    set(TEST_CMD python3|${TEST_ROOT}/${TEST_TARGET})
    _write_test_to_file(${OUTPUT_FILENAME} py${TEST_NAME} ${TEST_CMD} ${TEST_ROOT} ${TEST_EXPECTED_RESULTS} ${TEST_ABS_TOLERANCE} ${TEST_REL_TOLERANCE} ${ARGN})
endmacro()

macro(write_mp_target_test OUTPUT_FILENAME TEST_NAME TEST_TARGET TEST_NP TEST_ROOT TEST_EXPECTED_RESULTS TEST_ABS_TOLERANCE TEST_REL_TOLERANCE)
    set(TEST_CMD \${MPIEXEC_EXECUTABLE}|-n|${TEST_NP}|\$<TARGET_FILE:${TEST_TARGET}>)
    _write_test_to_file(${OUTPUT_FILENAME} ${TEST_NAME} ${TEST_CMD} ${TEST_ROOT} ${TEST_EXPECTED_RESULTS} ${TEST_ABS_TOLERANCE} ${TEST_REL_TOLERANCE} ${ARGN})
